const int buttonPin = 2;
const int rLEDPin = 3;
const int gLEDPin = 4;
const int bLEDPin = 5;

int buttonState = 0;
int ledcolor = 0;

// the setup function runs once when you press reset or power the board
void setup() {
  // initialize digital pin LED_BUILTIN as an output.
  pinMode(rLEDPin, OUTPUT);
  pinMode(gLEDPin, OUTPUT);
  pinMode(bLEDPin, OUTPUT);
  pinMode(buttonPin, INPUT);
}

// the loop function runs over and over again forever
void loop() {

  buttonState = digitalRead(buttonPin);

  if (buttonState == HIGH) {
    ledcolor = ledcolor + 1;
    delay(100);
  }

  if (ledcolor == 0){
  digitalWrite(rLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, HIGH);
  }

  else if (ledcolor == 1){
  digitalWrite(rLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, HIGH);
  }

  else if (ledcolor == 2){
  digitalWrite(rLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, HIGH);
  }

  else if (ledcolor == 3){
  digitalWrite(rLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, LOW);
  }

  else if (ledcolor == 4){
  digitalWrite(rLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, HIGH);
  }

  else if (ledcolor == 5){
  digitalWrite(rLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, LOW);
  }

  else if (ledcolor == 6){
  digitalWrite(rLEDPin, HIGH);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, LOW);
  }

  else if (ledcolor == 7){
  digitalWrite(rLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(gLEDPin, LOW);  // turn the LED on (HIGH is the voltage level)
  digitalWrite(bLEDPin, LOW);
  }

  else if (ledcolor == 8){
    ledcolor = 0;
  }
}
